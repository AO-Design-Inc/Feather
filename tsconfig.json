{
	"extends": "@tsconfig/node12/tsconfig.json",

	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"preserveConstEnums": true,
		"outDir": "built",
		"sourceMap": true,
		"removeComments": true,
		"lib": ["es2020"],
		"resolveJsonModule": true,
		"esModuleInterop": true
	},

	"include": ["src/**/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
