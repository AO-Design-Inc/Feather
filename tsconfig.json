{
	"compilerOptions": {
		"esModuleInterop": false,
		"outDir": "built",
		"downlevelIteration": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"lib": ["es2019"],
		"target": "esnext",
		"strict": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": false
	},
	"typedocOptions": {
		"entryPoints": "src",
		"out": "docs",
		"name": "Feather"
	},
	"include": ["src/**/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
